{
  "name": "kallosophia",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "docker compose -f infra/local/docker-compose.full.yml up --build",
    "dev:api": "docker compose -f infra/local/docker-compose.api.yml up --build",
    "dev:web": "docker compose -f infra/local/docker-compose.web.yml up --build",
    "down": "docker compose -f infra/local/docker-compose.full.yml down",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
